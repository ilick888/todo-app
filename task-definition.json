{
  "family": "todo-app",
  "networkMode": "awsvpc",
  "containerDefinitions": [
    {
      "name": "todo-app",
      "image": "todo-app",
      "portMappings": [
        {
          "containerPort": 8000,
          "hostPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true
    }
  ],
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "executionRoleArn": "ecsTaskExecutionRole",
  "cpu": "256",
  "memory": "512"
  "command": ["python","manage.py","runserver","0.0.0.0:8000"]
}
